import Layout from '../layouts/BaseLayout.astro';
---
<Layout title="Speisekarte - Museumsgasthof">
  <h1 class="text-3xl font-bold mb-4">Unsere Speisekarte</h1>
  <p>Genießen Sie unsere Auswahl an regionalen und saisonalen Gerichten:</p>
  <ul class="list-disc list-inside">
    <li>Schweinebraten mit Knödeln</li>
    <li>Hausgemachter Apfelstrudel</li>
    <li>Tagesfrische Salate</li>
  </ul>
  <a href="/speisekarte.pdf" target="_blank" class="mt-6 inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Speisekarte als PDF anzeigen</a>
</Layout>
